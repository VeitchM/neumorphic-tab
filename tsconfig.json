{
  "compilerOptions": {
    "strict": true,
    "outDir":"./lib",
    "rootDir":"./src",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]

}
