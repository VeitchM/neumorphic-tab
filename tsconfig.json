{
  "compilerOptions": {
    "strict": true,
    "outDir":"./dist",
    "rootDir":"./src",
      "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    // "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "declaration": true,  // This option generates the .d.ts files

  },
  "include": ["src"],
  "exclude": ["node_modules"]

}
